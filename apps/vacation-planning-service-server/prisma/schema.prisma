datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Destination {
  bookings    Booking[]
  country     String?
  createdAt   DateTime  @default(now())
  description String?
  id          String    @id @default(cuid())
  name        String?
  updatedAt   DateTime  @updatedAt
  vacation    Vacation? @relation(fields: [vacationId], references: [id])
  vacationId  String?
}

model Booking {
  createdAt     DateTime           @default(now())
  date          DateTime?
  destination   Destination?       @relation(fields: [destinationId], references: [id])
  destinationId String?
  id            String             @id @default(cuid())
  status        EnumBookingStatus?
  updatedAt     DateTime           @updatedAt
  vacation      Vacation?          @relation(fields: [vacationId], references: [id])
  vacationId    String?
}

model Vacation {
  bookings     Booking[]
  createdAt    DateTime      @default(now())
  destinations Destination[]
  endDate      DateTime?
  id           String        @id @default(cuid())
  name         String?
  startDate    DateTime?
  updatedAt    DateTime      @updatedAt
  user         User?         @relation(fields: [userId], references: [id])
  userId       String?
}

model User {
  createdAt DateTime   @default(now())
  email     String?    @unique
  firstName String?
  id        String     @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime   @updatedAt
  username  String     @unique
  vacations Vacation[]
}

enum EnumBookingStatus {
  Option1
}
